<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 글래스모피즘 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/spotify_glass_surface" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- 테두리 하이라이트 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/spotify_glass_border_bright" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
</layer-list>