<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 배경 그라데이션 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/spotify_player_overlay"
                android:endColor="@color/spotify_background" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- 글래스 효과 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/spotify_glass_border" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
</layer-list>