<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%">
    
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false">
        
        <!-- 회전 진행률 표시 -->
        <gradient
            android:angle="0"
            android:endColor="@color/spotify_green_primary"
            android:startColor="@color/spotify_green_light"
            android:type="sweep"
            android:useLevel="false" />
            
    </shape>
    
</rotate>