        <path
            android:fillColor="@color/md_theme_secondary"
            android:pathData="M-10,-15 L-6,-15 L-6,15 L-10,15 Z" />
        <path
            android:fillColor="@color/md_theme_tertiary"
            android:pathData="M-18,-10 L-14,-10 L-14,10 L-18,10 Z" />
        <!-- Right bars -->
        <path
            android:fillColor="@color/md_theme_secondary"
            android:pathData="M6,-15 L10,-15 L10,15 L6,15 Z" />
        <path
            android:fillColor="@color/md_theme_tertiary"
            android:pathData="M14,-10 L18,-10 L18,10 L14,10 Z" />
