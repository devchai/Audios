<?xml version="1.0" encoding="utf-8"?>
<!-- 2024-2025 Modern MainActivity with Edge-to-Edge Design -->
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackground"
        android:fitsSystemWindows="true"
        tools:context=".activity.MainActivity">

    <!-- ===== 2024-2025 Modern App Bar with Edge-to-Edge ===== -->
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                app:contentInsetStart="20dp"
                app:contentInsetEnd="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Modern App Title -->
                <TextView
                        android:id="@+id/app_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textAppearance="@style/TextAppearance.Audios.Headline.Large"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp" />

                <!-- Modern Tab Layout -->
                <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        style="@style/Widget.Audios.TabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:tabMode="fixed"
                        app:tabGravity="fill"
                        app:tabIndicatorHeight="3dp"
                        app:tabIndicatorAnimationMode="elastic">

                    <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tab_convert" />

                    <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tab_library" />

                    <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tab_edit" />

                </com.google.android.material.tabs.TabLayout>

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Modern Subtle Divider -->
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:alpha="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar_layout" />

    <!-- Enhanced ViewPager with Smooth Transitions -->
    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/colorBackground"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

    <!-- ===== Modern Floating Action Button ===== -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main_action"
            style="@style/Widget.Audios.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:contentDescription="주요 액션"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>