<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ios_system_background">

    <!-- iOS Style Table Cell -->
    <LinearLayout
        android:id="@+id/layout_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:longClickable="true">

        <!-- File Icon Container -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="12dp">

            <!-- Background Circle -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ios_icon_background_gradient" />

            <!-- File Type Icon -->
            <ImageView
                android:id="@+id/iv_file_thumbnail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_file_music"
                app:tint="@color/white"
                android:contentDescription="파일 타입" />

            <!-- Format Badge -->
            <TextView
                android:id="@+id/tv_format_badge"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="-4dp"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/ios_badge_background"
                android:text="MP3"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:textStyle="bold"
                android:paddingHorizontal="4dp"
                android:gravity="center"
                tools:text="WAV" />

        </FrameLayout>

        <!-- File Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- File Name -->
            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="converted_audio_001.mp3"
                android:textAppearance="@style/TextAppearance.iOS.Body.Large"
                android:textColor="@color/ios_label"
                android:maxLines="1"
                android:ellipsize="middle"
                tools:text="My_Favorite_Song_Converted.mp3" />

            <!-- File Details Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tv_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.5 MB"
                    android:textAppearance="@style/TextAppearance.iOS.Body.Small"
                    android:textColor="@color/ios_secondary_label"
                    tools:text="8.5 MB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textAppearance="@style/TextAppearance.iOS.Body.Small"
                    android:textColor="@color/ios_tertiary_label" />

                <TextView
                    android:id="@+id/tv_file_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:24"
                    android:textAppearance="@style/TextAppearance.iOS.Body.Small"
                    android:textColor="@color/ios_secondary_label"
                    tools:text="03:24" />

            </LinearLayout>

            <!-- File Date -->
            <TextView
                android:id="@+id/tv_file_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024년 3월 20일"
                android:textAppearance="@style/TextAppearance.iOS.Body.Small"
                android:textColor="@color/ios_tertiary_label"
                android:layout_marginTop="1dp"
                tools:text="2024년 3월 20일 15:30" />

        </LinearLayout>

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Enhanced Play Button -->
            <FrameLayout
                android:id="@+id/btn_play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:longClickable="true">

                <!-- Play/Pause Icon -->
                <ImageView
                    android:id="@+id/iv_play_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    app:tint="@color/ios_system_blue"
                    android:contentDescription="재생" />

                <!-- Stop Text (Hidden by default) -->
                <TextView
                    android:id="@+id/tv_stop_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="정지"
                    android:textColor="@color/ios_system_blue"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:contentDescription="정지" />

            </FrameLayout>

            <!-- Chevron Right -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/ios_tertiary_label"
                android:contentDescription="상세보기" />

        </LinearLayout>

    </LinearLayout>

    <!-- iOS Style Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="72dp"
        android:background="@color/ios_separator" />

</LinearLayout>