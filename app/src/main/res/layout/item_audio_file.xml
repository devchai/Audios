<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/ripple_color"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- File Thumbnail/Icon -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/colorPrimaryContainer"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/iv_file_thumbnail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_audio"
                app:tint="?attr/colorOnPrimaryContainer"
                android:contentDescription="파일 썸네일" />

            <!-- Format Badge -->
            <TextView
                android:id="@+id/tv_format_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:background="?attr/colorTertiary"
                android:text="MP3"
                android:textColor="?attr/colorOnTertiary"
                android:textSize="8sp"
                android:textStyle="bold"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                tools:text="WAV" />

        </FrameLayout>

        <!-- File Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="converted_audio_001.mp3"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="My_Favorite_Song_Converted.mp3" />

            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_size"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="2dp"
                tools:text="크기: 8.5 MB" />

            <TextView
                android:id="@+id/tv_file_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_duration"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="길이: 03:24" />

            <TextView
                android:id="@+id/tv_file_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_date"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="날짜: 2024.03.20 15:30" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_play"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_play"
                app:iconSize="20dp"
                app:iconTint="?attr/colorPrimary"
                android:contentDescription="@string/play" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_more"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_more_vert"
                app:iconSize="20dp"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:contentDescription="더보기" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>