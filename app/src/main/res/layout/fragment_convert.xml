<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <!-- Spotify 스타일 히어로 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hero_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/spotify_hero_gradient"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- 메인 아이콘 -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_convert"
                    android:layout_marginBottom="16dp"
                    app:tint="@color/white"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/spotify_glass_surface"
                    android:padding="20dp" />

                <!-- 타이틀 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오디오 변환"
                    android:textAppearance="@style/TextAppearance.Spotify.Headline.Large"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center" />

                <!-- 서브타이틀 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비디오에서 오디오를 추출하고\n다양한 포맷으로 변환하세요"
                    android:textAppearance="@style/TextAppearance.Spotify.Body.Large"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:alpha="0.9" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 파일 선택 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- 섹션 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파일 선택"
                android:textAppearance="@style/TextAppearance.Spotify.Title.Large"
                android:textColor="@color/spotify_on_background"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- 파일 선택 버튼 (기존 ID 유지) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_select_file_container"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/spotify_card_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/spotify_outline_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_file_plus"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/spotify_green_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="파일 선택하기"
                        android:textAppearance="@style/TextAppearance.Spotify.Title.Medium"
                        android:textColor="@color/spotify_on_surface"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MP4, AVI, MOV 등"
                        android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                        android:textColor="@color/spotify_secondary_text"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Bottom Padding for Safe Area -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>

</ScrollView>