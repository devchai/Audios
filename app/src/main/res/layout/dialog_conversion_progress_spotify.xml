<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/spotify_surface_container"
    android:paddingTop="32dp"
    android:paddingBottom="24dp"
    android:paddingHorizontal="24dp">

    <!-- Spotify 스타일 변환 아이콘 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- 원형 진행률과 아이콘 -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp">

            <!-- 배경 원 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/spotify_surface_variant" />

            <!-- 진행률 표시 -->
            <ProgressBar
                android:id="@+id/conversion_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateDrawable="@drawable/spotify_conversion_progress"
                android:indeterminate="false"
                android:progress="45"
                android:max="100" />

            <!-- 변환 아이콘 -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_convert"
                app:tint="@color/spotify_green_primary" />

        </FrameLayout>

        <!-- 진행률 텍스트 -->
        <TextView
            android:id="@+id/progress_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45%"
            android:textAppearance="@style/TextAppearance.Spotify.Headline.Medium"
            android:textColor="@color/spotify_on_surface"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            tools:text="45%" />

    </LinearLayout>

    <!-- 변환 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <!-- 변환 제목 -->
        <TextView
            android:id="@+id/conversion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오디오 변환 중..."
            android:textAppearance="@style/TextAppearance.Spotify.Title.Large"
            android:textColor="@color/spotify_on_surface"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            tools:text="오디오 변환 중..." />

        <!-- 파일 정보 -->
        <TextView
            android:id="@+id/file_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sample_video.mp4 → sample_audio.mp3"
            android:textAppearance="@style/TextAppearance.Spotify.Body.Medium"
            android:textColor="@color/spotify_secondary_text"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            tools:text="sample_video.mp4 → sample_audio.mp3" />

        <!-- 상세 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/conversion_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5x 속도"
                android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                android:textColor="@color/spotify_tertiary_text"
                android:layout_marginEnd="16dp"
                tools:text="2.5x 속도" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textColor="@color/spotify_tertiary_text"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/estimated_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약 30초 남음"
                android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                android:textColor="@color/spotify_tertiary_text"
                tools:text="약 30초 남음" />

        </LinearLayout>

    </LinearLayout>

    <!-- 진행률 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <ProgressBar
            android:id="@+id/linear_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="45"
            android:max="100"
            android:progressDrawable="@drawable/spotify_progress_bar"
            android:layout_marginBottom="8dp" />

        <!-- 진행률 상세 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/processed_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6.8 MB / 15.2 MB"
                android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                android:textColor="@color/spotify_secondary_text"
                tools:text="6.8 MB / 15.2 MB" />

            <TextView
                android:id="@+id/processing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:23"
                android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                android:textColor="@color/spotify_secondary_text"
                tools:text="01:23" />

        </LinearLayout>

    </LinearLayout>

    <!-- 액션 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 백그라운드 실행 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/background_button"
            style="@style/Widget.Spotify.Button.Text"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="백그라운드"
            android:textColor="@color/spotify_secondary_text"
            android:layout_marginEnd="8dp"
            app:rippleColor="@color/spotify_ripple_surface" />

        <!-- 취소 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            style="@style/Widget.Spotify.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="취소"
            android:textColor="@color/spotify_error"
            android:layout_marginStart="8dp"
            app:strokeColor="@color/spotify_error"
            app:rippleColor="@color/spotify_ripple_surface" />

    </LinearLayout>

</LinearLayout>