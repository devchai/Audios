<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/spotify_item_selector"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- 파일 타입 아이콘 -->
    <LinearLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/spotify_surface_variant">

            <ImageView
                android:id="@+id/file_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_music"
                android:scaleType="centerInside"
                android:padding="12dp"
                app:tint="@color/file_type_audio"
                tools:tint="@color/file_type_audio" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- 파일 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 파일명 -->
        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Audio File.mp3"
            android:textAppearance="@style/TextAppearance.Spotify.Title.Medium"
            android:textColor="@color/spotify_on_surface"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Sample Audio File.mp3" />

        <!-- 파일 상세 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- 파일 크기 -->
            <TextView
                android:id="@+id/file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2 MB"
                android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                android:textColor="@color/spotify_secondary_text"
                tools:text="5.2 MB" />

            <!-- 구분자 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                android:textColor="@color/spotify_tertiary_text" />

            <!-- 재생 시간 -->
            <TextView
                android:id="@+id/file_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:24"
                android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                android:textColor="@color/spotify_secondary_text"
                tools:text="03:24" />

            <!-- 구분자 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                android:textColor="@color/spotify_tertiary_text" />

            <!-- 변환 날짜 -->
            <TextView
                android:id="@+id/file_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="오늘"
                android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                android:textColor="@color/spotify_secondary_text"
                tools:text="오늘" />

        </LinearLayout>

        <!-- 품질 및 포맷 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <!-- 포맷 태그 -->
            <TextView
                android:id="@+id/format_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MP3"
                android:textAppearance="@style/TextAppearance.Spotify.Label.Small"
                android:textColor="@color/spotify_green_primary"
                android:background="@drawable/spotify_card_background"
                android:backgroundTint="@color/spotify_primary_container"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="8dp"
                tools:text="MP3" />

            <!-- 품질 태그 -->
            <TextView
                android:id="@+id/quality_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320kbps"
                android:textAppearance="@style/TextAppearance.Spotify.Label.Small"
                android:textColor="@color/quality_high"
                android:background="@drawable/spotify_card_background"
                android:backgroundTint="@color/spotify_surface_container"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                tools:text="320kbps" />

        </LinearLayout>

    </LinearLayout>

    <!-- 액션 버튼들 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp">

        <!-- 재생/일시정지 버튼 -->
        <ImageView
            android:id="@+id/play_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_play"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/spotify_green_primary"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:layout_marginEnd="8dp"
            app:tint="@color/spotify_on_primary"
            android:contentDescription="재생" />

        <!-- 더보기 메뉴 -->
        <ImageView
            android:id="@+id/more_options"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:tint="@color/spotify_secondary_text"
            android:contentDescription="더보기" />

    </LinearLayout>

</LinearLayout>