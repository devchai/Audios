<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <!-- Spotify 스타일 히어로 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hero_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/spotify_hero_gradient"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- 메인 아이콘 -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_convert"
                    android:layout_marginBottom="16dp"
                    app:tint="@color/white"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/spotify_glass_surface"
                    android:padding="20dp" />

                <!-- 타이틀 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오디오 변환"
                    android:textAppearance="@style/TextAppearance.Spotify.Headline.Large"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center" />

                <!-- 서브타이틀 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비디오에서 오디오를 추출하고\n다양한 포맷으로 변환하세요"
                    android:textAppearance="@style/TextAppearance.Spotify.Body.Large"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:alpha="0.9" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 파일 선택 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- 섹션 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파일 선택"
                android:textAppearance="@style/TextAppearance.Spotify.Title.Large"
                android:textColor="@color/spotify_on_background"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- 파일 선택 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/file_select_card"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/spotify_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/spotify_outline_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_add"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/spotify_secondary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="파일 선택하기"
                        android:textAppearance="@style/TextAppearance.Spotify.Title.Medium"
                        android:textColor="@color/spotify_secondary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MP4, AVI, MOV 등"
                        android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                        android:textColor="@color/spotify_tertiary_text"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 선택된 파일 정보 (숨겨짐) -->
            <LinearLayout
                android:id="@+id/selected_file_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/spotify_item_selector"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_video"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/file_type_video"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/spotify_surface_variant"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sample_video.mp4"
                        android:textAppearance="@style/TextAppearance.Spotify.Title.Medium"
                        android:textColor="@color/spotify_on_surface"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/file_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.2 MB • 02:34"
                        android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                        android:textColor="@color/spotify_secondary_text"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/remove_file"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    app:tint="@color/spotify_tertiary_text" />

            </LinearLayout>

        </LinearLayout>

        <!-- 변환 설정 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- 섹션 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="변환 설정"
                android:textAppearance="@style/TextAppearance.Spotify.Title.Large"
                android:textColor="@color/spotify_on_background"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- 출력 포맷 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/spotify_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/spotify_outline_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출력 포맷"
                        android:textAppearance="@style/TextAppearance.Spotify.Label.Large"
                        android:textColor="@color/spotify_on_surface"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/format_mp3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="MP3"
                            android:textAppearance="@style/TextAppearance.Spotify.Label.Medium"
                            android:textColor="@color/spotify_on_primary"
                            android:background="@drawable/spotify_button_primary"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/format_aac"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="AAC"
                            android:textAppearance="@style/TextAppearance.Spotify.Label.Medium"
                            android:textColor="@color/spotify_secondary_text"
                            android:background="?attr/selectableItemBackground"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:layout_marginHorizontal="4dp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/format_wav"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="WAV"
                            android:textAppearance="@style/TextAppearance.Spotify.Label.Medium"
                            android:textColor="@color/spotify_secondary_text"
                            android:background="?attr/selectableItemBackground"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 품질 설정 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spotify_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/spotify_outline_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오디오 품질"
                        android:textAppearance="@style/TextAppearance.Spotify.Label.Large"
                        android:textColor="@color/spotify_on_surface"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="128 kbps"
                            android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                            android:textColor="@color/spotify_secondary_text" />

                        <SeekBar
                            android:id="@+id/quality_slider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="16dp"
                            android:progress="50"
                            android:progressTint="@color/spotify_green_primary"
                            android:progressBackgroundTint="@color/spotify_outline_variant"
                            android:thumbTint="@color/spotify_green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="320 kbps"
                            android:textAppearance="@style/TextAppearance.Spotify.Body.Small"
                            android:textColor="@color/spotify_secondary_text" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 변환 시작 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_conversion"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="변환 시작"
            android:textAppearance="@style/TextAppearance.Spotify.Label.Large"
            android:textColor="@color/spotify_on_primary"
            android:backgroundTint="@color/spotify_button_primary"
            android:enabled="false"
            app:cornerRadius="28dp"
            app:elevation="0dp"
            app:rippleColor="@color/spotify_ripple_primary"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>