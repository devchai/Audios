<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ios_system_background">

    <!-- iOS Style Compact Table Cell -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:gravity="center_vertical"
        android:minHeight="44dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <!-- File Icon -->
        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp">

            <!-- Icon Background -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ios_icon_background_small" />

            <ImageView
                android:id="@+id/iv_file_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_file_music"
                app:tint="@color/white"
                android:contentDescription="파일 아이콘" />

        </FrameLayout>

        <!-- File Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- File Name -->
            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="audio_file.mp3"
                android:textAppearance="@style/TextAppearance.iOS.Body.Medium"
                android:textColor="@color/ios_label"
                android:maxLines="1"
                android:ellipsize="middle"
                tools:text="converted_audio_001.mp3" />

            <!-- File Info (Size • Duration • Date) -->
            <TextView
                android:id="@+id/tv_file_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.2 MB • 03:24 • 오늘"
                android:textAppearance="@style/TextAppearance.iOS.Body.Small"
                android:textColor="@color/ios_secondary_label"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="1dp"
                tools:text="3.8 MB • 02:45 • 방금 전" />

        </LinearLayout>

        <!-- Action Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Quick Play Button -->
            <FrameLayout
                android:id="@+id/btn_play"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ios_play_button_background" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    app:tint="@color/white"
                    android:layout_marginStart="1dp"
                    android:contentDescription="재생" />

            </FrameLayout>

            <!-- Chevron -->
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/ios_quaternary_label"
                android:contentDescription="상세" />

        </LinearLayout>

    </LinearLayout>

    <!-- iOS Style Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="60dp"
        android:background="@color/ios_separator" />

</LinearLayout>